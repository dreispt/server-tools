<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="open_action_fact" model="ir.actions.act_window">
            <field name="name">Rule Facts</field>
            <field name="res_model">base.action.fact</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_action_fact"
                  name="Rule Facts"
                  parent="base.menu_automation"
                  action="open_action_fact" />

        <record id="view_action_fact_form" model="ir.ui.view">
            <field name="name">base.action.fact.form</field>
            <field name="model">base.action.fact</field>
            <field name="arch" type="xml">
                <form>
                  <group>
                    <group>
                        <field name="name" />
                        <field name="parent_id" />
                        <field name="negate_parent" />
                    </group>
                    <group>
                        <field name="assign_var" />"
                        <field name="require_var" />"
                        <field name="sequence" />"
                        <field name="model_id" />
                    </group>
                  </group>
                  <group>
                        <field name="filter_expr"
                               attrs="{'required': [('negate_parent', '=', False)],
                                       'invisible': [('negate_parent', '=', True)]}" />
                        <field name="note" />"
                        <field name="calc_expr" />"
                  </group>
                </form>
            </field>
        </record>

        <record id="view_action_fact_tree" model="ir.ui.view">
            <field name="name">base.action.fact.tree</field>
            <field name="model">base.action.fact</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" />
                    <field name="name" />
                    <field name="model_id" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
